<in.srain.cube.views.ptr.PtrFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_refresh_layout"
    app:ptr_resistance="1.7"
    app:ptr_ratio_of_header_height_to_refresh="1.2"
    app:ptr_duration_to_close="300"
    app:ptr_duration_to_close_header="2000"
    app:ptr_keep_header_when_refresh="true"
    app:ptr_pull_to_fresh="false"
    tools:context="com.vinsen.myapp.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/home_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp" />


        <com.vinsen.myapp.view.MyGridView
            android:id="@+id/home_cate"
            android:numColumns="4"
            android:layout_width="match_parent"
            android:layout_height="120dp" />


        <com.vinsen.myapp.view.MyGridView
            android:id="@+id/home_list"
            android:numColumns="1"
            android:layout_width="match_parent"
            android:layout_height="1000dp" />

    </LinearLayout>
    </ScrollView>
</in.srain.cube.views.ptr.PtrFrameLayout>
